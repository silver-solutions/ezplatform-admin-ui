{% extends '@EzPublishCore/content_fields.html.twig' %}

{% block uivarvarianttype_field %}
    {% apply spaceless %}
    <div class="ez-table">
        <table class="table table-striped">
            {% set field_value = field.value.variantData %}
            <thead>
                <tr>
                    <th>{{ 'content_fields.ezvariants.sku.label'|trans|desc('SKU') }}</th>
                    <th>{{ 'content_fields.ezvariants.code.label'|trans|desc('Code') }}</th>
                    <th>{{ 'content_fields.ezvariants.description.label'|trans|desc('Description') }}</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for variant in field.value.variantData %}
                <tr>
                    <td>{{ variant.sku.value }}</td>
                    <td>{{ variant.variantCode.value }}</td>
                    <td>{{ variant.description.value }}</td>
                    <td>
                        {% if variant.characteristicCode1 is defined %}
                            {{ variant.characteristicCode1.value }}
                        {% endif %}
                    </td>

                    <td>
                        {% if variant.characteristicCode2 is defined %}
                            {{ variant.characteristicCode2.value }}
                        {% endif %}
                    </td>
                </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
    {% endapply %}
{% endblock %}

{% block sesspecificationstype_field %}
    {% apply spaceless %}
        {% for specGroup in field.value.specData %}
            <table class="table ez-table--list">
                <thead>
                    <tr>
                        <th class="ez-table__cell ez-table__cell--header" colspan="2">
                            {% if specGroup.label is defined %}
                                {{ specGroup.label }}
                            {% else %}
                                <i>{{ specGroup.name }}</i>
                            {% endif %}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for specGroupData in specGroup.data %}
                        <tr class="ez-table__row">
                            <td class="ez-table__cell">{{ specGroupData.label }}</td>
                            <td class="ez-table__cell">
                                {{ specGroupData.value }}
                                {% if specGroupData.selected_option is defined %}
                                    {{ ' ' }}
                                    {{ specGroupData.selected_option }}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endfor %}
    {% endapply %}
{% endblock sesspecificationstype_field %}

{% block sesselection_field %}
    {{ field.value.text }}
{% endblock sesselection_field %}

{% block sesexternaldata_field %}
    {% set field_values = ses_simple_unserialize(field.value.text) %}

    <table class="table ez-table">
        <thead>
            <tr>
                <th>{{ 'content_fields.external_data.name.label'|trans|desc('Name') }}</th>
                <th>{{ 'content_fields.external_data.data.label'|trans|desc('Data') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for name, data in field_values %}
                <tr>
                    <td class="ez-table__cell">{{ name }}</td>
                    <td class="ez-table__cell">{{ data }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock sesexternaldata_field %}

{% block sesprofiledata_field %}
    {% apply spaceless %}
        <div class="ez-profile-data">
            {% set customerData = field.value.text|unserialize %}
            {% if field.value.lastErpUpdate != 0 %}
                <div>
                    <strong>{{ 'content_fields.profiledata.last.update.from.erp'|trans|desc('Last update from ERP') }}:</strong> {{ field.value.lastErpUpdate|date }}<br/>
                    <strong>{{ 'content_fields.profiledata.add.attributes.from.erp'|trans|desc('Add. attributes from ERP') }}:</strong><br/>
                    {% for  key,value in  customerData.buyerParties.0.SesExtension.value %}
                        {{ key }}: {{ value }}<br/>
                    {% endfor %}
                </div>
            {% endif %}
            <div>
                <strong>{{ 'content_fields.profiledata.buyer.address'|trans|desc('Buyer address') }}</strong>
                <div class="ez-profile-data__row">
                    {% for buyerParty in customerData.buyerParties %}
                        <div class="ez-card ez-profile-data__card">
                            <h5 class="ez-card__header">
                                {% if buyerParty.PartyIdentification[0].ID is defined %}
                                    {{ 'content_fields.profiledata.customer.number'|trans|desc('Customer number') }}: {{ buyerParty.PartyIdentification[0].ID.value | default('') }}
                                {% endif %}
                            </h5>
                            <div class="ez-card__body">
                                {% include '@ezdesign/common/address.html.twig' with {
                                    'address' : buyerParty, 
                                    'displayEmail' : false, 
                                    'raw' : true,
                                } %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% if customerData.deliveryParties is defined and customerData.deliveryParties|length > 0 %}
                <div>
                    <strong>{{ 'content_fields.profiledata.delivery.address'|trans|desc('Delivery address') }}</strong>
                    <div class="ez-profile-data__row">
                        {% for deliveryParty in customerData.deliveryParties %}
                            <div class="ez-card ez-profile-data__card">
                                <h5 class="ez-card__header">
                                    {% if deliveryParty.PartyIdentification[0].ID.value is defined %}
                                        {{ 'content_fields.profiledata.shipcode'|trans|desc('Shipcode') }}: {{ deliveryParty.PartyIdentification[0].ID.value }}
                                    {% endif %}
                                </h5>
                                <div class="ez-card__body">
                                    {% include '@ezdesign/common/address.html.twig' with {
                                        'address' : deliveryParty, 
                                        'displayEmail' : false, 
                                        'raw' : true,
                                    } %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endapply %}
{% endblock sesprofiledata_field %}
