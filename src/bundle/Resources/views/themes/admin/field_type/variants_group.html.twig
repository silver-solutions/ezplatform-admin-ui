<div class="ez-variants__group">
    <div class="ez-variants__group-label">
        <span>{{ group_label }}</span>
        <button
            title="{{ 'field_types.variants.button.trash'|trans|desc('Remove variant') }}"
            class="btn btn-icon ez-btn--remove-variant"
            type="button"
        >
            <svg class="ez-icon ez-icon--trash">
                <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#trash"></use>
            </svg>
        </button>
    </div>
    <div
        class="ez-variants__items-wrapper"
        data-template="{{ include('@ezdesign/field_type/variants_group_item.html.twig', {
            item_label: '{{ item_label }}',
            item_id: '{{ item_id }}'
        })|e('html_attr') }}"
    >
    </div>
</div>
